#include <iostream>
#include "math.h"
using namespace std;

int main()
{
    float a,b,c,d;
    double x,xr,xi,x1,x2;
    cout<<"Ingresar a: ";
    cin>>a;
    if (a==0)
    cout<<"Error.";
    else
    {
        cout<<"Ingresar b: ";
        cin>>b;
        cout<<"Ingresar c: ";
        cin>>c;
        d=pow(b,2)-4*a*c;
         if (d==0)
             {
                x=-d/(2*a);
                cout<<"La solucion unica es: "<<x;
             }
             else
                 if (d>0)
                {
                    x1=(-b+sqrt(d))/(2*a);
                    x2=(-b-sqrt(d))/(2*a);
                    cout<<"Las soluciones reales son: "<<endl;
                    cout<<"X1: "<<x1<<endl;
                    cout<<"X2: "<<x2;
                }
                    else
                    {
                        xr=-b/(2*a);
                        xi=sqrt(-b/(2*a));
                        cout<<"Las soluciones imaginarias son: "<<xr<<"+"<<xi<<"i"<<endl;
                        cout<<"Las soluciones imaginarias son: "<<xr<<"-"<<xi<<"i"<<endl;
                    }
                        
        
    }
    return 0;
    }
